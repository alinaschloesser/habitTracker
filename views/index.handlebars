                <pre>{{this.goal_name}}</pre>
                </div>
                {{/if}}{{/each}}
                </div>
            </div>
            <div class="column" id="Tuesday">
                <div class="box"> Tueday
                   {{#each goal_data}}{{#if this.tuesday}}
                <div> 
                <pre>{{this.goal_name}}</pre>
                </div>
                {{/if}}{{/each}}
                </div>
            </div>
            <div class="column" id="Wednesday">
                <div class="box">Wednesday
                   {{#each goal_data}}{{#if this.wednesday}}
                <div> 
                <pre>{{this.goal_name}}</pre>
                </div>
                {{/if}}{{/each}}
                </div>
            </div>
            <div class="column" id="Thursday">
                <div class="box">Thursday
                   {{#each goal_data}}{{#if this.thursday}}
                <div> 
                <pre>{{this.goal_name}}</pre>
                </div>
                {{/if}}{{/each}}
                </div>
            </div>
            <div class="column" id="Friday">
                <div class="box">Friday
                   {{#each goal_data}}{{#if this.friday}}
                <div> 
                <pre>{{this.goal_name}}</pre>
                </div>
                {{/if}}{{/each}}
                </div>
            </div>
            <div class="column" id="Saturday">
                <div class="box">Saturday
                   {{#each goal_data}}{{#if this.saturday}}
